@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<PageTitle>Pharmacy CMS</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div class="ms-auto d-flex align-items-center gap-3">
                <div class="text-end">
                    <div class="fw-semibold">@displayName</div>
                    <div class="small text-muted">@roleSummary</div>
                </div>
                <button type="button" class="btn btn-outline-secondary btn-sm" @onclick="SignOut">
                    <span class="oi oi-account-logout me-1" aria-hidden="true"></span>
                    Sign out
                </button>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    [CascadingParameter]
    private Task<AuthenticationState>? AuthenticationStateTask { get; set; }

    private string displayName = "Loading user...";
    private string roleSummary = string.Empty;

    protected override async Task OnParametersSetAsync()
    {
        if (AuthenticationStateTask is null)
        {
            return;
        }

        var authState = await AuthenticationStateTask;
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            displayName = user.Identity.Name
                ?? user.FindFirst("name")?.Value
                ?? user.FindFirst("preferred_username")?.Value
                ?? "Authenticated user";

            var roles = user.FindAll("role").Select(claim => claim.Value).Distinct(StringComparer.OrdinalIgnoreCase).ToList();
            roleSummary = roles.Count switch
            {
                0 => "Authenticated user",
                1 => roles[0],
                _ => string.Join(", ", roles)
            };
        }
        else
        {
            displayName = "Guest";
            roleSummary = "Not signed in";
        }
    }

    private void SignOut()
    {
        var relative = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        if (string.IsNullOrEmpty(relative))
        {
            relative = "/";
        }
        else if (!relative.StartsWith("/"))
        {
            relative = "/" + relative;
        }

        var returnUrl = System.Uri.EscapeDataString(relative);
        NavigationManager.NavigateTo($"/authentication/logout?returnUrl={returnUrl}", forceLoad: true);
    }
}
