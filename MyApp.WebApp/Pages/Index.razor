@page "/"
@attribute [Authorize]
@inject ICmsApiClient CmsApiClient
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider
@using System.Collections.Generic
@using System.Security.Claims
@using System.Text.Json
@using MyApp.WebApp.Components

<PageTitle>@(isPharmacyUser ? "My Pharmacy" : isClient ? "Browse Pharmacies" : "Pharmacies")</PageTitle>

@if (isPharmacyUser)
{
    <div class="d-flex flex-column flex-md-row align-items-md-center mb-4 gap-3">
        <div>
            <h1 class="mb-0">My Pharmacy</h1>
            <p class="text-muted mb-0">
                Review your catalog, categories, and payment history. Access to other pharmacies is disabled for this role.
            </p>
        </div>
        @if (assignedPharmacyId.HasValue)
        {
            <div class="ms-md-auto">
                <button class="btn btn-outline-primary" @onclick="NavigateToManagedPharmacyDetails">
                    <span class="oi oi-wrench me-1" aria-hidden="true"></span>
                    Manage store
                </button>
            </div>
        }
    </div>

    @if (isResolvingPharmacy)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Resolving your pharmacy...</span>
            </div>
        </div>
    }
    else if (assignedPharmacyId is null)
    {
        <div class="alert alert-warning" role="alert">
            <strong>Your account is not linked to a pharmacy yet.</strong>
            <div class="small text-muted mt-2">
                Ask an administrator to associate your user with a pharmacy to unlock the dashboard.
            </div>
            @if (!string.IsNullOrEmpty(pharmacyResolutionError))
            {
                <div class="small text-danger mt-2">@pharmacyResolutionError</div>
            }
        </div>
    }
    else
    {
        <PharmacyDashboard PharmacyId="assignedPharmacyId.Value" PrefetchedPharmacy="managedPharmacyDetails" />
    }
}
else
{
    <div class="d-flex flex-column flex-md-row align-items-md-center mb-4 gap-3">
        <div>
            <h1 class="mb-0">@(isClient ? "Browse Pharmacies" : "Pharmacies")</h1>
            <p class="text-muted mb-0">
                @(isClient
                    ? "Choose a pharmacy to see its products and place an order."
                    : "Manage the pharmacies in your tenant CMS.")
            </p>
        </div>
        @if (isAdmin)
        {
            <div class="ms-md-auto">
                <button class="btn btn-primary" @onclick="ShowCreateForm">
                    <span class="oi oi-plus me-1" aria-hidden="true"></span>
                    New Pharmacy
                </button>
            </div>
        }
    </div>


    @if (isClient)
    {
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <div class="d-flex flex-column flex-lg-row gap-3 align-items-lg-end">
                    <div class="flex-fill">
                        <label class="form-label fw-semibold">Find a product</label>
                        <input class="form-control"
                               placeholder="e.g., ibuprofen, cough syrup, bandages"
                               @bind="productSearchTerm"
                               @bind:event="oninput" />
                        <div class="form-text">We'll highlight pharmacies that currently stock this item.</div>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="button"
                                class="btn btn-primary"
                                disabled="@IsProductSearchDisabled"
                                @onclick="SearchProductsAsync">
                            @if (isSearchingProducts)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            }
                            Search
                        </button>
                        <button type="button"
                                class="btn btn-outline-secondary"
                                disabled="@IsProductSearchResetDisabled"
                                @onclick="ResetProductSearch">
                            Clear
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }


    @if (!string.IsNullOrEmpty(alertMessage))
    {
        <div class="alert alert-@alertStyle alert-dismissible fade show" role="alert">
            @alertMessage
            <button type="button" class="btn-close" aria-label="Close" @onclick="() => alertMessage = null"></button>
        </div>
    }

    @if (ShouldShowProductSearchResults)
    {
        <section class="mb-4">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                    <h2 class="h5 mb-1">Search results</h2>
                    @if (!string.IsNullOrWhiteSpace(lastSearchedProductTerm))
                    {
                        <div class="text-muted small">Showing pharmacies carrying <strong>@lastSearchedProductTerm</strong>.</div>
                    }
                </div>
                <button class="btn btn-link btn-sm text-decoration-none" type="button" @onclick="ResetProductSearch" disabled="@isSearchingProducts">
                    Clear search
                </button>
            </div>

            @if (isSearchingProducts)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Searching pharmacies...</span>
                    </div>
                </div>
            }
            else if (!string.IsNullOrEmpty(productSearchError))
            {
                <div class="alert alert-danger" role="alert">
                    <strong>We couldn't complete the search.</strong>
                    <div class="small text-break">@productSearchError</div>
                    <button class="btn btn-outline-danger btn-sm mt-2" type="button" @onclick="SearchProductsAsync">Try again</button>
                </div>
            }
            else if (productMatches.Count == 0)
            {
                <div class="alert alert-info" role="alert">
                    <strong>No pharmacies carry this product yet.</strong>
                    <div class="small text-muted mt-2">
                        Try another medicine name or clear the search to browse every pharmacy.
                    </div>
                </div>
            }
            else
            {
                <div class="row g-4">
                    @foreach (var match in productMatches)
                    {
                        <div class="col-12 col-lg-6">
                            <div class="card shadow-sm h-100 border-0 border-top border-4 border-top-@GetStatusColor(match.IsActive)">
                                <div class="card-body d-flex flex-column">
                                    <div class="d-flex justify-content-between align-items-start gap-3">
                                        <div>
                                            <h5 class="mb-1">@match.PharmacyName</h5>
                                            <p class="small text-muted mb-2">
                                                @(!string.IsNullOrWhiteSpace(match.Address)
                                                    ? match.Address
                                                    : "No address provided.")
                                            </p>
                                            <span class="badge bg-@GetStatusColor(match.IsActive)">
                                                @(match.IsActive ? "Active" : "Inactive")
                                            </span>
                                        </div>
                                        <button class="btn btn-outline-secondary btn-sm" title="Open pharmacy" @onclick="@(() => NavigateToPharmacy(match.PharmacyId))">
                                            <span class="oi oi-external-link" aria-hidden="true"></span>
                                        </button>
                                    </div>

                                    <div class="mt-3">
                                        <div class="small text-uppercase text-muted mb-2">Matching products (@match.Products.Count)</div>
                                        <ul class="list-group list-group-flush border rounded">
                                            @foreach (var product in match.Products)
                                            {
                                                <li class="list-group-item">
                                                    <div class="d-flex justify-content-between align-items-start gap-3">
                                                        <div class="flex-fill">
                                                            <div class="fw-semibold">@product.Name</div>
                                                            @if (!string.IsNullOrWhiteSpace(product.Description))
                                                            {
                                                                <div class="small text-muted text-truncate">@product.Description</div>
                                                            }
                                                        </div>
                                                        <div class="text-end">
                                                            <div class="fw-semibold">@product.Price.ToString("C")</div>
                                                            <div class="small text-muted">Stock: @product.StockQuantity</div>
                                                        </div>
                                                    </div>
                                                </li>
                                            }
                                        </ul>
                                    </div>

                                    <div class="mt-3">
                                        <button class="btn btn-primary btn-sm" @onclick="@(() => NavigateToPharmacy(match.PharmacyId))">
                                            <span class="oi oi-cart me-1" aria-hidden="true"></span>
                                            Shop this pharmacy
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </section>
    }
    else if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading pharmacy data...</span>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <strong>Unable to load pharmacies.</strong>
            <div class="small text-break">@errorMessage</div>
            <button class="btn btn-outline-danger btn-sm mt-2" @onclick="ReloadAsync">Try again</button>
        </div>
    }
    else if (pharmacies.Count == 0)
    {
        <div class="alert alert-info">
            @if (isClient)
            {
                <span>There are no pharmacies available to order from right now.</span>
            }
            else
            {
                <span>There are no pharmacies yet.</span>
            }
            @if (isAdmin)
            {
                <span> Use the <strong>New Pharmacy</strong> button to add one.</span>
            }
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var pharmacy in pharmacies)
            {
                <div class="col-12 col-md-6 col-xl-4">
                    <div class="card shadow-sm h-100 border-0 border-top border-4 border-top-@GetStatusColor(pharmacy.IsActive)">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <h5 class="card-title mb-0">@pharmacy.Name</h5>
                                    <span class="badge bg-@GetStatusColor(pharmacy.IsActive) mt-2">
                                        @(pharmacy.IsActive ? "Active" : "Inactive")
                                    </span>
                                </div>
                                <button class="btn btn-outline-secondary btn-sm" title="Manage pharmacy" @onclick="@(() => NavigateToPharmacy(pharmacy.Id))">
                                    <span class="oi oi-external-link" aria-hidden="true"></span>
                                </button>
                            </div>

                            <p class="text-muted small mb-4">Categories: <strong>@pharmacy.CategoriesCount</strong> &middot; Products: <strong>@pharmacy.ProductsCount</strong></p>

                            <div class="mt-auto">
                                <button class="btn @(isClient ? "btn-primary" : "btn-outline-primary") btn-sm me-2" @onclick="@(() => NavigateToPharmacy(pharmacy.Id))">
                                    <span class="oi @(isClient ? "oi-cart" : "oi-wrench") me-1" aria-hidden="true"></span>
                                    @(isClient ? "Shop" : "Manage")
                                </button>
                                @if (isAdmin)
                                {
                                    <button class="btn btn-outline-danger btn-sm" @onclick="@(() => ToggleDeleteConfirmation(pharmacy.Id))">
                                        <span class="oi oi-trash me-1" aria-hidden="true"></span>
                                        Delete
                                    </button>
                                }

                                @if (isAdmin && confirmDeleteId == pharmacy.Id)
                                {
                                    <div class="alert alert-warning mt-3 mb-0">
                                        <div class="fw-semibold">Delete <span class="text-danger">@pharmacy.Name</span>?</div>
                                        <p class="small mb-3">This removes the pharmacy and all of its data.</p>
                                        <div class="d-flex gap-2">
                                            <button class="btn btn-danger btn-sm" disabled="@isMutating" @onclick="@(() => ConfirmDeleteAsync(pharmacy.Id))">
                                            @if (isMutating)
                                            {
                                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                            }
                                            Delete
                                        </button>
                                        <button class="btn btn-outline-secondary btn-sm" @onclick="CancelDelete">Cancel</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@if (isAdmin && showCreateForm)
{
    <div class="card shadow-sm border-0 mt-5">
        <div class="card-header bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="h5 mb-0">Create Pharmacy</h2>
                <button class="btn btn-sm btn-outline-secondary" @onclick="HideCreateForm">Cancel</button>
